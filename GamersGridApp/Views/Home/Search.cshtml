@model GamersGridApp.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Search";
}
@*@Styles.Render("~/Content/css")*@

<h2>Search Results</h2>
@Styles.Render("~/Content/SearchCss")
<div class="jumbotron searchContainer">
    <div class="display-4 pageTitle">Search Results</div>
</div>

@if (Model.HasGames)
{
    foreach (var game in Model.Games)
    {

        //AS CARD
        <div class="card gameCard">
                <img class="card-img-top gameIcon" src="@game.SearchIconPath" alt="">
                <div class="card-body gameCardBody">
                    <h1 class="card-title h2 gameCardTitle"><strong>@game.Title</strong></h1>
                </div>
                <div class="button_cont">
                    <div class="btnAddGame">Add to your Games</div>
                </div>
            
            </div>
            <hr/>
    }
}
else
{
    <h3>No games were Found</h3>
}
@if (Model.HasUsers)
{
    foreach (var user in Model.Users)
    {

<div class="row userRow">
    <div class="col-2">
        <img class="img-fluid userImage" src="@user.Avatar" />
    </div>
    <div class="col userNickname">
        <h4>@user.NickName</h4>
        <span class="userLocation">@user.City, @user.Country</span>
    </div>
    <div class="col userCity">
        <span></span>
    </div>
    <div class="col userGames">
        <span>Add Users Games here as a list</span>
    </div>
    <div class="col userCity">
        <span>Add mmr or Achevements here</span>
    </div>
    <div class="col-2">
        <div class="button_cont" align="center">
            <a class="btnFollow" href="add-action-here">Follow</a>
        </div>
    </div>
</div>
