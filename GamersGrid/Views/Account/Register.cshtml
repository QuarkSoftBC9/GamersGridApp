@model GamersGrid.Models.Account.RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/css/Account/register.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Account/gsdk-bootstrap-wizard.css" rel="stylesheet" type="text/css" />
}
<div class="image-container set-full-height"
     style="height:auto;  background-image: @Url.Content("~/Static/Images/back.png")">

    <div class="container">
        <div class="   row">
            <div class="   col-sm-12    col-sm-offset-2">
                <div class="wizard-container">
                    <div class="card wizard-card" data-color="blue" id="wizardProfile">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="wizard-header">
                                <h3>
                                    <b>BUILD</b> YOUR PROFILE <br>

                                </h3>
                                <h4>
                                    This information will let us know more about you.
                                </h4>
                            </div>

                            <div class="wizard-navigation">
                                <ul>
                                    <li class=""><a href="#about" data-toggle="tab">About</a></li>
                                    <li class=""><a href="#account" data-toggle="tab">Account</a></li>
                                    <li class=""><a href="#address" data-toggle="tab">Address</a></li>
                                </ul>

                            </div>

                            <div class="tab-content">
                                <div class="tab-pane" id="about">
                                    <div class="row">
                                        <h4 class="info-text"> Let's start with the basic information</h4>
                                        <div class="col-sm-4 col-sm-offset-1">
                                            <div class="picture-container">
                                                <div class="picture">
                                                    <img src="~/Static/Images/default-avatar02.jpg" class="picture-src"
                                                         id="wizardPicturePreview" title="" />
                                                    @Html.TextBoxFor(m => m.AvatarImage, new { id= "wizard-picture", @class = "custom-file-input", type = "file", accept = "image/png,image/jpeg,image/jpg" })
                                                    @*<input type='file' name="file" id="wizard-picture" accept=".png, .jpg, .jpeg">*@
                                                </div>
                                                <h6>Choose Picture</h6>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>Email <small>(required)</small></label>
                                                @Html.TextBoxFor(v => v.Email, new { @class = "form-control", required = "required", @type = "email" })
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>Password <small>(required)</small></label>
                                                @Html.TextBoxFor(v => v.Password, new { @class = "form-control", required = "required", @type = "password" })
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-10 col-sm-offset-1">
                                            <label>NickName <small>(required)</small></label>
                                            @Html.TextBoxFor(v => v.NickName, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group col-sm-10 col-sm-offset-1">
                                            <label>FirstName <small>(required)</small></label>
                                            @Html.TextBoxFor(v => v.FirstName, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group col-sm-10 col-sm-offset-1">
                                            <label>LastName <small>(required)</small></label>
                                            @Html.TextBoxFor(v => v.LastName, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="account">
                                    <h4 class="info-text"> What is your Favorite Game? </h4>
                                    <div class="row">

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="col-sm-4">
                                                <div class="choice" data-toggle="wizard-radio">
                                                    @Html.RadioButtonFor(v => v.FavoriteGame, "Dota 2", new { @class = "form-control " })
                                                    <div class="icon">
                                                        <i class="fab fa-old-republic"></i>
                                                    </div>
                                                    <h6>Dota 2</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="choice" data-toggle="wizard-radio">
                                                    @Html.RadioButtonFor(v => v.FavoriteGame, "League Of Legends", new { @class = "form-control" })
                                                    <div class="icon">
                                                        <i class="fas fa-fist-raised"></i>
                                                    </div>
                                                    <h6>League Of Legends</h6>
                                                </div>

                                            </div>
                                            <div class="col-sm-4">
                                                <div class="choice" data-toggle="wizard-radio">
                                                    @Html.RadioButtonFor(v => v.FavoriteGame, "Overwatch", new { @class = "form-control" })
                                                    <div class="icon">
                                                        <i class="fas fa-crosshairs"></i>
                                                    </div>
                                                    <h6>Overwatch</h6>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="tab-pane" id="address">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="info-text"> Are you living in a nice area? </h4>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Country</label><br>
                                                <select id="Country" name="Country" class="form-control"></select>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 ">
                                            <div class="form-group">
                                                <label>City</label>
                                                @Html.TextBoxFor(v => v.City, new { @class = "form-control", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="wizard-footer height-wizard">
                                <div class="pull-right">
                                    <input type='button' style='background-color:blue'
                                           class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next'
                                           value='Next' />
                                    <input type='submit' style='background-color:blue'
                                           class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish'
                                           value='Finish' />

                                </div>

                                <div class="pull-left">
                                    <input type='button' style='background-color:blue'
                                           class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous'
                                           value='Previous' />
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>


    <script src="~/js/Account/jquery.bootstrap.wizard.js"></script>
    <script src="~/js/Account/gsdk-bootstrap-wizard.js"></script>
    <script src="~/js/Account/Register.js"></script>
    @*<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>*@
}




