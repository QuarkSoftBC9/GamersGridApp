@using Microsoft.AspNetCore.Identity
@using GamersGrid.DAL.Models.Identity
@inject SignInManager<GGuser> SignInManager
@inject UserManager<GGuser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="GamerProfile" asp-action="Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Message" asp-action="Messageboard" title="Manage">Messageboard</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
